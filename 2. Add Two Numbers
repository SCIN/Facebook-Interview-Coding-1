
2. Add Two Numbers
ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
    ListNode* p1 = l1;
    ListNode* p2 = l2;
    ListNode* head = new ListNode(0);
    ListNode* curr = head;
    int carry = 0;
    while (p1 || p2) {
        int val1 = p1 ? p1->val : 0;
        int val2 = p2 ? p2->val : 0;
        int sum = val1 + val2 + carry;
        curr->next = new ListNode(sum % 10);
        carry = sum / 10;
        curr = curr->next;
        if (p1) p1 = p1->next;
        if (p2) p2 = p2->next;
    }
    if (carry) curr->next = new ListNode(1);
    return head->next;
}

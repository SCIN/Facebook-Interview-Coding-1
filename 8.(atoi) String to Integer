8.(atoi) String to Integer 

int myAtoi(string str) {
  int i = 0;
  int base = 0;
  int sign = 1;
  while (str[i] == ' ') i++;
  if (str[i] == '-') {
    i++;
    sign = -1;
  } else if (str[i] == '+') {
    i++;
  }
  while (str[i] >= '0' && str[i] <= '9') {
    if (base > INT_MAX / 10 || ((base == INT_MAX / 10) && (str[i] > '7'))) {
      if (sign > 0) return INT_MAX;
      else return INT_MIN;
    }
    base = base * 10 + (str[i] - '0');
    i++;
  }
  return sign * base;
}
